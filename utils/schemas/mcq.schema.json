{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique question identifier"
          },

          "question": {
            "type": "string",
            "minLength": 10
          },

          "stimulus": {
            "type": "object",
            "description": "Optional visual or data stimulus",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["svg", "image", "table"]
              },
              "content": {
                "type": "string",
                "description": "Inline SVG markup or image URL"
              },
              "alt": {
                "type": "string",
                "description": "Accessibility description"
              },
              "caption": {
                "type": "string"
              },
              "stimulus_id": {
                "type": "string",
                "description": "Optional ID for reuse across questions"
              }
            },
            "required": ["type", "content"],
            "additionalProperties": false
          },

          "choices": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 4,
            "maxItems": 4
          },

          "correct_choice_index": {
            "type": "integer",
            "minimum": 0,
            "maximum": 3
          },

          "explanation": {
            "type": "string",
            "minLength": 10
          },

          "aligned_lo_ids": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },

          "skill_codes": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },

          "source_ids": {
            "type": "array",
            "items": { "type": "string" }
          },

          "difficulty": {
            "type": "string",
            "enum": ["easy", "medium", "hard"]
          }
        },

        "required": [
          "id",
          "question",
          "choices",
          "correct_choice_index",
          "explanation",
          "aligned_lo_ids",
          "skill_codes",
          "difficulty"
        ],

        "additionalProperties": false
      }
    }
  },

  "required": ["questions"],
  "additionalProperties": false
}
